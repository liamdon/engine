{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "checkJs": true,
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "outDir": "types",
        "strict": false,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "strictPropertyInitialization": true,
        "target": "es6",
        "typeRoots": [ "./node_modules/@webgpu/types", "./node_modules/@types" ]
    },
    "ts-node": {
        "esm": true,
        // Note that ts-node is only used by the Mocha test runner.
        // Remove if you want ts-node to do typechecking during Mocha tests,
        // but this may require additional configuration like a separate tsconfig.json for tests.
        "transpileOnly": true,
        "files": true,
        "experimentalSpecifierResolution": "node",
    },
    "include": ["src/**/*.js", "src/**/*.ts", "scripts/**/*.mjs", "rollup.config.mjs", "playcanvas.d.ts"],
}
